@{
    ViewData["Title"] = "Vehicle Usage Report";
}

<div class="container mt-5">
    <h2 class="text-center">Vehicle Usage Report</h2>

    <table class="table table-bordered table-striped mt-4">
        <thead class="gradient-bg text-white">
            <tr>
                <th>Vehicle Name</th>
                <th>Rental Rate (RM)</th>
                <th>Rental Count</th>
                <th>Total Days Rented</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vehicle in ViewData["UsageReport"] as dynamic)
            {
                <tr>
                    <td>@vehicle.VehicleName</td>
                    <td>@vehicle.RentalRate.ToString("0.00")</td>
                    <td>@vehicle.RentalCount</td>
                    <td>@vehicle.TotalDaysRented</td>
                </tr>
            }
        </tbody>
    </table>
</div>
