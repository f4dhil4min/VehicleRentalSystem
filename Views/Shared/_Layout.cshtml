<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vehicle Rental System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <!-- Logo and Brand -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/logo.png" alt="Vehicle Rental System Logo" style="height: 50px; margin-right: 10px;" />
                <span class="fw-bold" style="font-size: 1.5rem;">Vehicle Rental System</span>
            </a>

            <!-- Navbar Toggle for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Navbar Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"] as string == "Home" ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"] as string == "About Us" ? "active" : "")" asp-controller="Home" asp-action="About">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"] as string == "FAQs" ? "active" : "")" asp-controller="Home" asp-action="FAQs">FAQs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"] as string == "Vehicles" ? "active" : "")" asp-controller="Vehicles" asp-action="Index">Vehicles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"] as string == "Customers" ? "active" : "")" asp-controller="Customers" asp-action="Index">Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"] as string == "Rentals" ? "active" : "")" asp-controller="Rentals" asp-action="Index">Rentals</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewData["Title"] as string == "Reports Dashboards" ? "active" : "")" asp-controller="Reports" asp-action="Index">Reports</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer-section text-center py-3">
        <p>&copy; 2024 Vehicle Rental System | All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
